<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="mx.com.practicamvvm.data.local.model.ResultsModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/id_result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.id}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/data_Insert_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.dateInsert}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/slug_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.slug}" />


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/colums_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.columns}" />


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/fact_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.fact}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/organization_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.organization}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/resource_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.resource}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/url_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.url}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/operation_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.operations}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dataset_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.dataset}" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/created_at_Result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{model.createdAt.toString()}" />


            <Button
                android:id="@+id/bt_share"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compartir por whast app " />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>